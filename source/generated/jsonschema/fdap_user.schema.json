{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserConfig",
  "type": "object",
  "required": [
    "iam_grants"
  ],
  "properties": {
    "iam_grants": {
      "$ref": "#/definitions/IamGrants"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "IamGrants": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "admin"
          ]
        },
        {
          "type": "object",
          "required": [
            "limited"
          ],
          "properties": {
            "limited": {
              "$ref": "#/definitions/IamGrantsLimited"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "IamGrantsLimited": {
      "type": "object",
      "properties": {
        "forms": {
          "description": "Give the user access to all these forms.",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "menu_items": {
          "description": "For every menu item id listed here, give the user access to the menu item, all child menu items (if a section) transitively, and any forms or views directly linked by leaf menu items.",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "views": {
          "description": "Give the user access to all these views.",
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    }
  }
}